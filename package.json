{
  "name": "devedmonton",
  "version": "1.0.0",
  "description": "Fostering a stronger software development community in Edmonton.",
  "author": "Jeff",
  "private": true,
  "scripts": {
    "develop": "gridsome develop",
    "build": "gridsome build",
    "explore": "gridsome explore",
    "lint": "prettier-eslint '**/*.{js,vue}' --list-different --ignore '{.temp,dist,}/**'",
    "lint:styles": "stylelint '**/*.{css,vue}' --ip '{.temp,dist}/**'",
    "test": "ava"
  },
  "dependencies": {
    "@gridsome/source-filesystem": "0.6.2",
    "@gridsome/source-graphql": "0.1.0",
    "@gridsome/transformer-remark": "0.4.0",
    "gridsome": "0.7.9",
    "open-color": "1.7.0"
  },
  "devDependencies": {
    "@vue/test-utils": "1.0.0-beta.29",
    "@zazen/eslint-config": "1.0.x",
    "@zazen/stylelint-config": "1.0.x",
    "ava": "2.4.x",
    "browser-env": "3.2.x",
    "eslint": "6.6.x",
    "eslint-plugin-vue": "5.2.x",
    "gridsome-plugin-tailwindcss": "2.2.x",
    "husky": "3.0.x",
    "lint-staged": "9.4.x",
    "require-extension-hooks": "0.3.x",
    "require-extension-hooks-babel": "1.0.x",
    "require-extension-hooks-vue": "3.0.x",
    "stylelint": "11.1.x"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,vue}": [
      "prettier-eslint --write",
      "git add"
    ],
    "*.{css,vue}": [
      "stylelint --fix",
      "git add"
    ]
  },
  "prettier": {
    "arrowParens": "always",
    "htmlWhitespaceSensitivity": "strict",
    "proseWrap": "never",
    "semi": false,
    "singleQuote": true,
    "tabWidth": 4,
    "trailingComma": "all"
  }
}
